body,
html {
    margin: 0;
    font-family: "微軟正黑體", 'Lato', Calibri, Arial, sans-serif;
    cursor: default;
}
#top_segement {
    height: 5px;
    background: #FF6666;
}
#logo {
    height: 120px;
}
#title {
    margin-left: 15px;
    height: 90px;
    margin-bottom: 10px;
}
#FB {
    width: 60px;
    float: right;
    margin-top: 60px;
}
header {
    background: #fff;
    padding: 15px;
    width: 950px;
    margin: 0 auto;
}
iframe {
    display: block;
    width: 950px;
    margin: 0 auto;
    height: 300px;
}
marquee {
    width: 900px;
    margin: 0 auto;
    font-size: 20px;
    margin-top: 20px;
    margin-bottom: 20px;
    display: block;
}
.nav {
    margin: 0 auto;
    width: 950px;
    position: relative;
    overflow: hidden;
}
.block {
    cursor: pointer;
    position: relative;
    float: left;
    width: 25%;
    display: inline-block;
}
.block:before {
    content: "";
    display: block;
    padding-top: 100%;
}
.block_content {
    display: inline-block;
}
.block_content img {
    position: absolute;
    width: 100%;
    z-index: 2;
}
.block a {
    z-index: 2;
    position: absolute;
    bottom: 10px;
    right: 10px;
    font-size: 28px;
    color: white;
    text-shadow: 2px 2px 10px #000;
    font-weight: 700;
}
.block_content {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: black;
}
.block_content:hover > img {
    height: 100%;
    z-index: 0;
}
.block_content:hover > #img_about {
    width: 40%;
}
.block_content:hover > #img_news {
    width: 60%;
}
.block_content:hover > #img_service {
    width: 50%;
}
.block_content:hover > #img_donate {
    width: 50%;
}
.block_content:hover > #img_contact {
    width: 30%;
}
.block_content:hover > #img_qa {
    width: 60%;
}
.block_content img {
    height: 100%;
    -webkit-transition: width 0.5s;
    -moz-transition: width 0.5s;
    -ms-transition: width 0.5s;
    -o-transition: width 0.5s;
    transition: width 0.5s;
}
.block_content:hover > a {
    font-size: 15px;
    padding-right: 0;
}
.block_content a {
    background: rgba(0, 0, 0, 0.6);
    left: 0;
    bottom: 0;
    width: 95%;
    height: 45px;
    padding-right: 5%;
    line-height: 1.5em;
    text-align: right;
    font-size: 28px;
    -webkit-transition: all 0.5s;
    -moz-transition: all 0.5s;
    -ms-transition: all 0.5s;
    -o-transition: all 0.5s;
    transition: all 0.5s;
}
.eng_content {
    position: absolute;
    bottom: 10px;
    right: 10px;
    font-size: 28px;
    text-shadow: 2px 2px 10px #000;
    font-weight: 700;
    color: white;
    z-index: 1;
}
.content {
    margin: 0 auto;
    width: 950px;
    position: relative;
}
footer {
    width: 950px;
    margin: 0 auto;
    height: 300px;
    background: #FF6666;
    color: #fff;
    padding-top: 30px
}
footer a {
    color: #fff;
    cursor: default;
    text-decoration: none;
}
footer i {
    font-size: 21px;
    margin-right: 5px;
}
.footer_block {
    display: inline-block;
    vertical-align: top;
}
.footer_title {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 5px;
}
#our_mission {
    margin-left: 40px;
    width: 280px;
    line-height: 1.5em;
}
#contact_us {
    margin-left: 140px;
    margin-top: 25px;
}
#contact_info {
    font-size: 18px;
    line-height: 1.6em;
}
#address {
    cursor: pointer;
}
#contact_button {
    margin-top: 20px;
}
#contact_button button {
    background: #66ff66;
    border: 0;
    padding: 0;
    -webkit-border-radius: 7px;
    -moz-border-radius: 7x;
    border-radius: 7px;
    width: 180px;
    height: 55px;
    color: #00213e;
    font-family: "微軟正黑體", 'Lato', Calibri, Arial, sans-serif;
    font-size: 20px;
    margin-right: 20px;
    position: relative;
    -webkit-box-shadow: 0px 6px 0px 0px rgba(50, 50, 50, 1);
    -moz-box-shadow:    0px 6px 0px 0px rgba(50, 50, 50, 1);
    box-shadow:         0px 6px 0px 0px rgba(50, 50, 50, 1);
}
#contact_button button:active {
    margin-top: 3px;
    -webkit-box-shadow: 0px 3px 0px 0px rgba(50, 50, 50, 1);
    -moz-box-shadow:    0px 3px 0px 0px rgba(50, 50, 50, 1);
    box-shadow:         0px 3px 0px 0px rgba(50, 50, 50, 1);
}
#button_donate {
    float: left;
}
#button_contact:active {
    float: right;
}
#contact_button img {
    top: 12px;
    left: 35px;
    position: absolute;
}
#fb_plugin {
    float: right;
    margin-right: 50px;
    margin-top: 20px;
    width: 250px;
    height: 230px;
    overflow: hidden;
    background: #fff;
    padding: 0px 10px
}
#fb_plugin iframe {
    width: 100%;
}
#dialog-overlay {
    width: 100%;
    height: 100%;
    filter: alpha(opacity=50);
    -moz-opacity: 0.5;
    -khtml-opacity: 0.5;
    opacity: 0.5;
    background: #000;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 3000;
    display: none;
}
#dialog-box {
    -webkit-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
    -moz-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
    background: #eee;
    width: 500px;
    height: 500px;
    position: fixed;
    top: 50%;
    left: 50%;
    margin-top: -250px;
    margin-left: -250px;
    z-index: 5000;
    display: none;
}
#dialog-close {
    cursor: pointer;
    position: absolute;
    top: -55px;
    right: 0;
    font-size: 50px;
    color: #eee;
    text-shadow: 0px 0px 10px #000000;
}
.dialog-content {
    width: 500px;
    height: 500px;
}